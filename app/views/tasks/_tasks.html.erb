<ul class="media-list">
  
<% tasks.each do |task| %>

    
<% user = task.user %>

    <li class="media">
      <div class="media-body">
        <div>
          
<%= link_to user.name, user_path(user) %>
 <span class="text-muted">posted at 
<%= task.created_at %>
</span>
        </div>
        
        <div>
          <p>
タスク : <%= task.content %>
</p>
<p>ステータス : <%= task.status %></p>
        </div>
      </div>
    </li>
  
<% end %>

  
<%= paginate tasks %>

</ul>