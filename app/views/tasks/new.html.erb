<h1>タスク新規作成</h1>

<div class = "row">
  <div class = "col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">
    
    
<%= form_for(@task) do |t| %>

<% if @task.errors.any? %>

  <div id = "error_explanation", class = "alert alert-warning">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= t.label :content, "タスク" %>

<%= t.text_field :content, class: "form-control" %>



<%= t.label :status, "ステータス" %>

<%= t.text_field :status, class: "form-control" %>

<%= t.submit "投稿", class: "btn btn-primary" %>

<% end %>

  </div>
</div>

<% if false %>
<%= link_to "一覧に戻る", tasks_path %>
<% end %>



