<h1>id: <%= @task.id %> のタスク編集</h1>

<%= form_for(@task) do |t| %>

<% if @task.errors.any? %>

  <div id = "error_explanation">
    <ul>
      <% @task.errors.full_messages.each do |message| %>
      <li>
        <%= message %>
      </li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= t.label :content, 'タスク' %>

  
<%= t.text_field :content %>

<%= t.label :status, "ステータス" %>

<%= t.text_field :status %>


  
<%= t.submit '投稿' %>

<% end %>


<%= link_to '一覧に戻る', tasks_path %>




